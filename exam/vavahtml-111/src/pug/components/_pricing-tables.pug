section.prices
    .row
        .col.s12
            h2 Price range
    .row
        .col.s12.l4.margin-on-medium-and-down
            .price-box
                h4 Beginner
                .price
                    sup $
                    | 19
                .divider.flow-text
                ul.flow-text
                    li 5 users
                        span.info.tooltipped(data-position='right', data-delay='50', data-tooltip='The number of allowed users') ?
                    li Optimisation
                    li Caching
                    li Automation
                        span.info.tooltipped(data-position='top', data-delay='50', data-tooltip='Involves Gulp commands') ?
                    li Validation
                    li Linting
                    li &mdash;
                    li &mdash;
                a.btn-large.btn-flat.waves-effect.waves-dark Buy

        .col.s12.l4.margin-on-medium-and-down
            .price-box.featured
                h4 Pro
                .price
                    sup $
                    | 49
                .divider.flow-text
                ul.flow-text
                    li 10 users
                        span.info.tooltipped(data-position='top', data-delay='50', data-tooltip='The number of allowed users') ?
                    li Optimisation
                    li Caching
                    li Automation
                        span.info.tooltipped(data-position='top', data-delay='50', data-tooltip='Involves Gulp commands') ?
                    li Validation
                    li Linting
                    li Templating
                        span.info.tooltipped(data-position='top', data-delay='50', data-tooltip='Includes Jade templates engine') ?
                    li &mdash;
                a.btn-large.btn-flat.waves-effect.waves-dark Buy

        .col.s12.l4
            .price-box
                h4 Enterprise
                .price
                    sup $
                    | 199
                .divider.flow-text
                ul.flow-text
                    li 25 users
                        span.info.tooltipped(data-position='top', data-delay='50', data-tooltip='The number of allowed users') ?
                    li Optimisation
                    li Caching
                    li Automation
                        span.info.tooltipped(data-position='top', data-delay='50', data-tooltip='Involves Gulp commands') ?
                    li Validation
                    li Linting
                    li Templating
                        span.info.tooltipped(data-position='top', data-delay='50', data-tooltip='Includes Jade templates engine') ?
                    li Preprocessors
                        span.info.tooltipped(data-position='top', data-delay='50', data-tooltip='This is for Jade, Sass and CoffeeScript') ?
                a.btn-large.btn-flat.waves-effect.waves-dark Buy

    if (isHome)
        .row
            .col.s12
                a(href='#/prices').flow-text.underline.grey-text.lighten-4.view-all Learn more